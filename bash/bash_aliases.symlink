# Git alis 
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias gdf='git diff HEAD'
alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'
alias gath='git add msc_thesis.scriv*'

